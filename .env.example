# Database (PostgreSQL with PostGIS recommended)
DATABASE_URL=your-database-connection-string

# PayloadCMS
PAYLOAD_SECRET=your-super-secret-key-change-in-production

# Site URLs
NEXT_PUBLIC_SITE_URL=http://localhost:3000
PAYLOAD_PUBLIC_SITE_URL=http://localhost:3000

# AI - OpenAI (for content generation)
OPENAI_API_KEY=sk-...

# External Data Source APIs
# NASA EONET - No API key required (public API)
# USGS Earthquakes - No API key required (public API)
# ReliefWeb - No API key required (public API, uses appname for identification)

# OpenWeatherMap (optional - for weather data enrichment)
OPENWEATHERMAP_API_KEY=your-openweathermap-key

# Mapbox (for auto-generated map thumbnails)
MAPBOX_ACCESS_TOKEN=pk.your-mapbox-public-token

# Amazon Affiliate (for product links)
AMAZON_AFFILIATE_TAG=worldunderwater-20

# Cron Job Configuration
CRON_ENABLED=true
CRON_TIMEZONE=UTC

# ISR Revalidation
# Generate with: openssl rand -hex 32
REVALIDATE_TOKEN=your-secure-revalidation-token

# Revalidation Security Settings
# Comma-separated list of allowed origins for revalidation webhook
REVALIDATE_ALLOWED_ORIGINS=http://localhost:3000,https://worldunderwater.org

# Social Automation (optional)
SOCIAL_AUTOMATION_ENABLED=false
TWITTER_BEARER_TOKEN=your-twitter-user-token
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id
SOCIAL_WEBHOOK_URL=https://hooks.example.com/...

# Content Queue
CONTENT_QUEUE_BATCH=3
CONTENT_QUEUE_DEFAULT_PRIORITY=50
CONTENT_QUEUE_PRIORITY=50
CONTENT_QUEUE_CLAIM_TIMEOUT_MS=900000
CONTENT_QUEUE_WORKER_ID=content-worker-1

# Data Retention
DATA_RETENTION_DAYS=30

# Ingestion Monitoring
INGEST_ERROR_THRESHOLD=3
INGEST_ERROR_WINDOW_MINUTES=60

# Newsletter (optional - for email sending)
# RESEND_API_KEY=re_...
# NEWSLETTER_FROM_EMAIL=alerts@worldunderwater.org

# Monitoring (optional)
# SENTRY_DSN=https://...@sentry.io/...
